extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1= tit
    .w3-container
      table.w3-table-all
        tr
          th Ano
          th Título
          th Elenco
          th Gêneros
          th Actions
        each f in filmes
          tr
            td= f.year
            td= f.title
            td
              ul.w3-ul
                each ator in f.cast
                  li
                    a(href='http://localhost:2510/ator/' + ator) #{ator}
            td
              ul.w3-ul
                each g in f.genres
                  li= g
            td
              a(class='w3-btn w3-white w3-border w3-border-blue w3-round-large' href='http://localhost:2510/filmes/edit/' + f.id) Editar
              a(class='w3-btn w3-white w3-border w3-border-blue w3-round-large' href='http://localhost:2510/filmes/remove/' + f.id) Remover

    footer.w3-container.w3-blue
      adress Generated by EW2025 class