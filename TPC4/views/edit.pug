extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1= Filmes
    .w3-card-4.w3-light-grey
        form(class="w3-container", action='/filmes/edit/'+filme.id, method='POST')
            p Title: 
                input(class="w3-input w3-round", type='text', name='title', value=filme.title)
            
            p Year: 
                input(class="w3-input w3-round", type='text', name='year', value=filme.year)

            h3 Cast:
            each actor, index in filme.cast
                p Actor #{index + 1}:
                input(class="w3-input w3-round", type='text', name=`cast[${index}]`, value=actor)

            h3 Genres:
            each genre, index in filme.genres
                p Genre #{index + 1}:
                input(class="w3-input w3-round", type='text', name=`genres[${index}]`, value=genre)

            input(class='w3-btn w3-blue w3-mb-2', type='submit', value='Edit')

